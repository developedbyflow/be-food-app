{
  "name": "be-food-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --project tsconfig.prod.json",
    "start": "node dist/index.js",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "secrets:check": "gitleaks detect --no-banner --verbose",
    "db": "tsx database/scripts/db.ts",
    "db:migrate": "npm run db migrate:up",
    "db:rollback": "npm run db migrate:down",
    "db:migrate:status": "npm run db migrate:status",
    "db:migrate:create": "npm run db migrate:create",
    "db:create": "tsx database/scripts/db.ts create",
    "db:seed": "tsx database/scripts/db.ts seed",
    "db:setup": "tsx database/scripts/db.ts setup",
    "db:reset": "tsx database/scripts/db.ts reset",
    "db:foods": "tsx database/scripts/db.ts setup foods",
    "db:users": "tsx database/scripts/db.ts setup users",
    "db:all": "tsx database/scripts/db.ts setup all"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-rate-limit": "^6.0.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.15.2",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-prettier": "^5.4.0",
    "gitleaks": "^1.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/joi": "^17.2.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limiter": "^1.3.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.10",
    "pg": "^8.16.0",
    "winston": "^3.17.0",
    "zod": "^3.25.48"
  }
}
